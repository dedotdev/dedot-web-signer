{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "paths": {
      "@dedot/signer-base": ["../base/src"],
      "@dedot/signer-base/*": ["../base/src/*"],
      "@dedot/signer-keyring": ["../keyring/src"],
      "@dedot/signer-keyring/*": ["../keyring/src/*"],
      "@dedot/signer-utils": ["../utils/src"],
      "@dedot/signer-utils/*": ["../utils/src/*"],
      "@dedot/signer-sdk": ["../sdk/src"],
      "@dedot/signer-sdk/*": ["../sdk/src/*"]
    }
  }
}
