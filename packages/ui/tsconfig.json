{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "@dedot/signer-base": ["../../base/src"],
      "@dedot/signer-base/*": ["../../base/src/*"],
      "@dedot/signer-keyring": ["../../keyring/src"],
      "@dedot/signer-keyring/*": ["../../keyring/src/*"],
      "@dedot/signer-utils": ["../../utils/src"],
      "@dedot/signer-utils/*": ["../../utils/src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../base/tsconfig.json"
    }
  ]
}
